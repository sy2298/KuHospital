<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
   <LinearLayout
       android:background="#ffffff"
       android:layout_gravity="center_vertical"
       android:orientation="horizontal"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
      <ImageButton
          android:background="#ffffff"
          android:id="@+id/back_btn"
          android:layout_marginTop="20dp"
          android:layout_marginLeft="15dp"
          android:layout_width="30dp"
          android:layout_height="30dp"
         android:src="@drawable/left"/>
   <TextView
       android:layout_gravity="center"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:id="@+id/dept_name"
       android:text="가정의학과"
       android:layout_marginLeft="130dp"
       android:layout_marginTop="20dp"
       android:layout_marginBottom="21dp"
       android:textSize="18sp">
   </TextView>
   </LinearLayout>
   <LinearLayout
       android:background="@drawable/border2"
       android:orientation="vertical"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       >
      <LinearLayout
          android:orientation="horizontal"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          >
      <ImageView
          android:src="@drawable/d1"
          android:id="@+id/doctor_img"
          android:layout_margin="10dp"
          android:layout_width="120dp"
          android:layout_height="120dp"
          />
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical">
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="horizontal">
         <TextView
             android:id="@+id/d_name"
             android:layout_margin="10dp"
             android:text="최재경"
             android:textSize="16sp"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content" />
            <ImageView
                android:layout_marginTop="13dp"
               android:src="@drawable/star"
                android:layout_width="15dp"
                android:layout_height="15dp"/>
         </LinearLayout>
         <TextView
             android:id="@+id/d_info"
             android:layout_marginLeft="10dp"
             android:text="건강노화, 비만, 금연클리닉, 건강검진"
             android:textSize="13sp"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content" />
         <LinearLayout
             android:orientation="horizontal"
             android:layout_marginLeft="10dp"
             android:layout_marginTop="20dp"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content">
            <Button
                android:background="@drawable/border4"
                android:id="@+id/d_profile"
                android:layout_gravity="center_horizontal"
                android:layout_weight="2"
                android:textSize="13sp"
                android:layout_marginRight="15dp"
                android:text="프로필"
                android:layout_width="100dp"
                android:layout_height="wrap_content"/>
            <Button
                android:background="@drawable/border4"
                android:id="@+id/d_register"
                android:layout_weight="2"
                android:textSize="13sp"
                android:text="진료 예약"
                android:layout_width="100dp"
                android:layout_height="wrap_content"/>
         </LinearLayout>
         <TextView
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
            android:text="  "
            android:textSize="20dp"/>
      </LinearLayout>
      </LinearLayout>
      <LinearLayout
          android:background="@drawable/border2"
          android:orientation="horizontal"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          >
         <ImageView
             android:src="@drawable/d2"
             android:id="@+id/doctor_img2"
             android:layout_margin="10dp"
             android:layout_width="120dp"
             android:layout_height="120dp"
             />
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="vertical">
            <TextView
                android:id="@+id/d_name2"
                android:layout_margin="10dp"
                android:text="신진영"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/d_info2"
                android:layout_marginLeft="10dp"
                android:text="노인의학, 비만클리닉, 호스피스완화"
                android:textSize="13sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
               <Button
                   android:background="@drawable/border4"
                   android:id="@+id/d_profile2"
                   android:layout_gravity="center_horizontal"
                   android:layout_weight="2"
                   android:textSize="13sp"
                   android:layout_marginRight="15dp"
                   android:text="프로필"
                   android:layout_width="100dp"
                   android:layout_height="wrap_content"/>
               <Button
                   android:background="@drawable/border4"
                   android:id="@+id/d_register2"
                   android:layout_weight="2"
                   android:textSize="13sp"
                   android:text="진료 예약"
                   android:layout_width="100dp"
                   android:layout_height="wrap_content"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="  "
                android:textSize="20dp"/>
         </LinearLayout>
         </LinearLayout>
            <LinearLayout
                android:background="@drawable/border2"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
               <ImageView
                   android:src="@drawable/d3"
                   android:id="@+id/doctor_img3"
                   android:layout_margin="10dp"
                   android:layout_width="120dp"
                   android:layout_height="120dp"
                   />
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="vertical">
                  <TextView
                      android:id="@+id/d_name3"
                      android:layout_margin="10dp"
                      android:text="김경진"
                      android:textSize="16sp"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content" />
                  <TextView
                      android:id="@+id/d_info3"
                      android:layout_marginLeft="10dp"
                      android:text="가정의학과, 금연클리닉, 비만클리닉"
                      android:textSize="13sp"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content" />
                  <LinearLayout
                      android:layout_marginLeft="10dp"
                      android:layout_marginTop="20dp"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content">
                     <Button
                         android:background="@drawable/border4"
                         android:id="@+id/d_profile3"
                         android:layout_gravity="center_horizontal"
                         android:layout_weight="2"
                         android:textSize="13sp"
                         android:layout_marginRight="15dp"
                         android:text="프로필"
                         android:layout_width="100dp"
                         android:layout_height="wrap_content"/>
                     <Button
                         android:background="@drawable/border4"
                         android:id="@+id/d_register3"
                         android:layout_weight="2"
                         android:textSize="13sp"
                         android:text="진료 예약"
                         android:layout_width="100dp"
                         android:layout_height="wrap_content"/>
                  </LinearLayout>
                  <TextView
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:text="  "
                      android:textSize="20dp"/>
               </LinearLayout>
         </LinearLayout>
      </LinearLayout>
      </LinearLayout>
