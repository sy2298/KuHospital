<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:background="@drawable/prescription_round"
    android:id="@+id/prescription_linear"
    >
    <LinearLayout
        android:orientation="horizontal" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"

        android:background="#E4E7E8"
        >


        <TextView
            android:id="@+id/diagnose_date"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:text="진료 날짜"
            android:gravity="center_vertical" />
        <TextView
            android:id="@+id/diagnose_department"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:textAlignment="center"
            android:text="진료 과"

            android:gravity="center_vertical"/>
        <TextView
            android:id="@+id/diagnose_professor"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:textAlignment="center"
            android:text="교수 이름"
            android:gravity="center_vertical" />

        <TextView
            android:id="@+id/diagnose_patient_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:text="환자명"
            android:textAlignment="center"
            android:gravity="center_vertical"/>
        <Button
            android:id="@+id/diagnose_link"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="3"
            android:textStyle="bold"
            android:textSize="12sp"
            android:text = "▽"
            />

    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/linear"
        android:visibility="gone"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        >
        <TextView
            android:id="@+id/diagnose_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="center"
            android:background="#AEAEB2"
            android:text="진료 내용" />
        <TextView
            android:id="@+id/diagnose_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="15sp"
            android:text="TextView"
            android:background = "#CCCCCC"/>



    </LinearLayout>


</LinearLayout>