<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#ffffff"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_vertical"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context=".LoginActivity">
    <LinearLayout android:orientation="vertical" android:gravity="center"
        android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:src="@drawable/logo3"/>
        </LinearLayout>
        <LinearLayout
             android:orientation="horizontal" android:gravity="center"
            android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView
            android:textStyle="bold"
            android:text="ID"
            android:gravity="center"
            android:textSize="20sp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/textView"
            tools:layout_editor_absoluteY="256dp" tools:layout_editor_absoluteX="84dp"/>
        <EditText
            android:textStyle="bold"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:inputType="textPersonName"
            android:hint="아이디를 입력하세요."
            android:ems="10"
            android:id="@+id/id_text"
            tools:layout_editor_absoluteY="256dp" tools:layout_editor_absoluteX="124dp"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout android:orientation="horizontal" android:gravity="center"
        android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView
            android:textStyle="bold"
            android:text="PW"
            android:gravity="center"
            android:textSize="20sp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/textView2"
            tools:layout_editor_absoluteY="313dp" tools:layout_editor_absoluteX="84dp"/>
        <EditText
            android:textStyle="bold"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:inputType="textPassword"
            android:hint="비밀번호를 입력하세요."
            android:ems="10"
            android:id="@+id/pw_text"
            tools:layout_editor_absoluteY="320dp" tools:layout_editor_absoluteX="124dp"/>
    </LinearLayout>
    <LinearLayout android:orientation="horizontal" android:gravity="center"
        android:layout_width="match_parent" android:layout_height="wrap_content">
        <Button
            android:textStyle="bold"
            android:text="로그인" android:layout_margin="5dp"
            android:layout_width="110dp"
            android:layout_height="47dp"
            android:id="@+id/signin_button" android:background="@drawable/border4"
            tools:layout_editor_absoluteY="388dp" tools:layout_editor_absoluteX="118dp"/>
        <Button
            android:textStyle="bold"
            android:text="회원가입" android:layout_margin="5dp"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:id="@+id/signup_button" android:background="@drawable/border4"
            tools:layout_editor_absoluteY="388dp" tools:layout_editor_absoluteX="219dp"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal" android:gravity="center"
        android:layout_width="match_parent" android:layout_height="wrap_content">
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop = "5dp"
            android:id="@+id/login_maintain"/>
        <TextView
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="로그인 상태 유지"
            android:layout_marginLeft="2dp"
            android:layout_marginTop = "5dp"
            android:textSize="15dp" />
    </LinearLayout>
</LinearLayout>