<LinearLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:src="@drawable/logo3"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="vertical"
        >
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="300dp"
                android:layout_marginTop="-15dp"
                android:src="@drawable/logo2" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="10dp"
                    android:textSize="15dp"
                    android:text="안녕하세요\n항상 최선을 다하는\n건국대학교병원입니다."
                    android:textColor="#ffffff"
                    android:fontFamily="@font/nanumsquareroundr"/>

            </LinearLayout>
        </FrameLayout>


    </LinearLayout>
    <LinearLayout
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_gravity="center_vertical"
        android:background="@drawable/rounded"
        android:orientation="horizontal"
        android:layout_marginTop="-10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageButton
            android:background="#ffffff"
            android:id="@+id/dept_search"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_search_black_24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:layout_marginTop="3dp"
            android:hint="   증상, 과를 검색해주세요"
            android:background="#ffffff"
            android:layout_marginLeft="15dp"
            android:id="@+id/edit_dept"
            android:layout_width="300dp"
            android:layout_height="30dp"
            android:fontFamily="@font/nanumsquareroundr"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/main_btn1"
            android:text="로그인\n/회원가입"
            android:textAlignment="center"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center"
            android:textSize="23dp"
            android:textColor="@color/snow"
            android:fontFamily="@font/nanumsquareroundr"
            android:background="#3086C9"

            />
        <Button
            android:id="@+id/main_btn2"
            android:text="오시는 길"
            android:textAlignment="center"
            android:textColor="@color/snow"
            android:fontFamily="@font/nanumsquareroundr"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center"
            android:textSize="23dp"
            android:background="#12B8BA"


            />
        <Button
            android:id="@+id/main_btn3"
            android:text="진료예약"
            android:textSize="23dp"
            android:textAlignment="center"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/snow"
            android:background="#3086C9"
            android:fontFamily="@font/nanumsquareroundr"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <Button
            android:id="@+id/main_btn4"
            android:text="결제"
            android:textAlignment="center"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="13dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center"
            android:textSize="23dp"
            android:textColor="@color/snow"
            android:background="#12B8BA"

            android:fontFamily="@font/nanumsquareroundr"

            />
        <Button
            android:id="@+id/main_btn5"
            android:text="대리결제"
            android:fontFamily="@font/nanumsquareroundr"
            android:textAlignment="center"
            android:textColor="@color/snow"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="13dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center"
            android:textSize="23dp"
            android:background="#3086C9"

            />
        <Button
            android:id="@+id/main_btn6"
            android:text="실손보험"
            android:textColor="@color/snow"
            android:background="#12B8BA"
            android:fontFamily="@font/nanumsquareroundr"
            android:textSize="23dp"
            android:textAlignment="center"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="13dp"
            android:layout_marginBottom="10dp"

            />
    </LinearLayout>

</LinearLayout>